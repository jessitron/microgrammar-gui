{
    "files.exclude": {
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/**.js": {
            "when": "$(basename).tsx"
        },
        "**/**.d.ts": {
            "when": "$(basename).ts"
        },
        "**/*.d.ts.map": true,
        "**/*.js.map": true
    }
}